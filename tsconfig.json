{
  "compilerOptions": {
    "outDir": "lib",
    "target": "es3",
    "module": "commonjs",
    "jsx": "react",
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "importHelpers": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules"
  ]
}
